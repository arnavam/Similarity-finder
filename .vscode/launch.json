{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Streamlit App",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "a_streamlit_app.py",
        "--server.port=8501"
      ],
      "env": {
        "API_URL": "http://localhost:8000"
      }
    },
    {
      "name": "FastAPI Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.api_server:app",
        "--reload",
        "--port",
        "8000"
      ]
    }
  ]
}